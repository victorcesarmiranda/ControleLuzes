<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="CONTROLE DAS LUZES DA UNIVERSIDADE"
            android:layout_width="300dp"
            android:layout_height="52dp" android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            android:textAlignment="center" android:textStyle="bold" app:layout_constraintBottom_toTopOf="@+id/luz1"/>
    <TextView
            android:text="BLOCO 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bloco1"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/bloco2" android:layout_marginBottom="100dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="BLOCO 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bloco3"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
    <TextView
            android:text="BLOCO 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bloco2"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/bloco3" android:layout_marginBottom="100dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"/>
    <TextView
            android:text="Luzes ligadas?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/luz1"
            android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/luz2" android:layout_marginBottom="100dp"
            app:layout_constraintStart_toEndOf="@+id/bloco1" android:layout_marginStart="30dp"/>
    <TextView
            android:layout_width="24dp"
            android:layout_height="24dp" android:id="@+id/cor1"
            android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/luz1"
            android:layout_marginStart="10dp" app:layout_constraintBottom_toTopOf="@+id/cor2"
            android:layout_marginBottom="100dp"/>
    <TextView
            android:layout_width="24dp"
            android:layout_height="24dp" android:id="@+id/cor2"
            android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/luz2" android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@+id/cor3" android:layout_marginBottom="100dp"/>
    <TextView
            android:layout_width="24dp"
            android:layout_height="24dp" android:id="@+id/cor3"
            android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/luz3" android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"/>
    <TextView
            android:text="Luzes ligadas?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/luz2"
            android:textStyle="bold" android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/bloco2"
            android:layout_marginStart="30dp" app:layout_constraintBottom_toTopOf="@+id/luz3"
            android:layout_marginBottom="100dp"/>
    <TextView
            android:text="Luzes ligadas?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/luz3"
            android:textStyle="bold" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/bloco3" android:layout_marginStart="30dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch2"
            app:layout_constraintBottom_toTopOf="@+id/switch3" android:layout_marginBottom="96dp"
            app:layout_constraintStart_toEndOf="@+id/cor2" android:layout_marginStart="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch1"
            app:layout_constraintBottom_toTopOf="@+id/switch2" android:layout_marginBottom="92dp"
            app:layout_constraintStart_toEndOf="@+id/cor1" android:layout_marginStart="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp" app:layout_constraintStart_toEndOf="@+id/cor3"
            android:layout_marginStart="44dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>